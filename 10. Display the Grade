# Input marks for 5 subjects
marks = []
for i in range(5):
    subject_marks = float(input(f"subject {i + 1}: "))
    marks.append(subject_marks)

# Calculate average marks
average_marks = sum(marks) / len(marks)

# Display average marks
print(f"Average Marks: {average_marks:.2f}")

# Assign grade based on average marks
if average_marks>= 90 and average_marks<=100:
	grade = 'A'
elif average_marks>=80 and average_marks<=89:
	grade = 'B'
elif average_marks>=70 and average_marks<=79:
	grade = 'C'
elif average_marks>=60 and average_marks<=69:
	grade = 'D'
else:
	grade = 'F'
# Display the grade
print(f"Grade: {grade}")

